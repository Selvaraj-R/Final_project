    @media(max-width: 1048px) {
        .logo {
            font-size: 28px;
        }
        .text-holder {
            margin-right: 20px;
        }
        .text-holder li a {
            font-size: 17px;
            transition: ease-in-out 0.1s;
        }
        /* .text-holder li:hover {
            border-left: 5px solid var(--primary);
            padding-left: 5px;
            transition: ease-in-out 0.2s;
        } */
        .text-holder li .getsign {
            border: none;
            padding: 0;
        }
        .text-holder li .getsign:hover {
            transition: ease-in-out 0.5s;
            box-shadow: none;
            color: white;
        }
    }
    
    @media(max-width: 900px) {
        .navbar-m {
            position: fixed;
            background-color: white;
            z-index: 20;
            width: 100vw;
        }
        .navbar-m #icon-menu {
            display: block;
            position: relative;
        }
        .logo {
            font-size: 25px;
            padding: 0 50px;
        }
        .navbar-m .text-holder {
            position: fixed;
            width: 100%;
            height: 100vh;
            background-color: rgba( 255, 255, 255, 1);
            top: 80px;
            text-align: left;
            left: -100%;
        }
        .navbar-m .text-holder li {
            display: block;
            line-height: 30px;
            margin: 10px 0;
        }
        .navbar-m .text-holder li a {
            color: black;
        }
        .navbar-m .text-holder li a:hover {
            color: var(--primary);
            border: none;
        }
        .navbar-m ul.show {
            left: 0;
            z-index: 10;
        }
        /* footer */
        .footer-m {
            display: block;
        }
        .footer-m .box-one {
            margin-left: 30px;
        }
        .menu-footer li {
            margin-left: 15px;
        }
        .menu-footer {
            position: relative;
        }
        footer {
            display: block;
        }
        .box-two {
            margin-left: 20px;
        }
        .box-three {
            left: 0;
        }
        /* section 2 */
        .second-text {
            word-wrap: break-word;
            display: flex;
            flex-direction: column;
            width: 80%;
        }
        .second-text h1 {
            font-size: 2rem;
        }
        .second-body .container .second-text p {
            font-size: 1rem;
        }
        .third .container {
            display: flex;
            flex-direction: column;
            flex-wrap: nowrap;
            justify-content: center;
            align-items: center;
        }
        .third .container .course-name {
            display: inline-flex;
            padding: 10px;
            width: 95%;
            align-items: center;
            justify-content: center;
        }
    }
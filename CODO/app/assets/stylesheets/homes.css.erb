    /* section 3  */
    
    .third {
        background-color: var(--bg-color);
        width: 100vw;
        height: auto;
    }
    
    .third h3 {
        color: var(--text);
    }
    
    .third .container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }
    
    .third .container .course-name {
        display: inline-flex;
        padding: 10px;
        width: 25%;
        align-items: center;
        justify-content: center;
    }
    
    .third h3 {
        text-align: center;
        font-weight: 500;
        padding: 20px;
    }
    
    .card.mb-3:hover {
        box-shadow: 0px 0px 20px rgba(128, 128, 128, 0.467);
    }

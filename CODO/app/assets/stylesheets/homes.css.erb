    .second-body {
        background-color: var(--bg-color);
        padding-bottom: 50px;
    }
    
    .second-body .container .second-text h1 span {
        color: var(--primary);
    }
    
    .second-text {
        position: relative;
        width: 40%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    
    .second-body .container .second-text h1,
    .second-body .container .second-text p {
        color: var(--text);
        text-align: center;
        margin-bottom: 40px;
        position: relative;
    }
    
    .card {
        border: none !important;
    }
    
    .card-body {
        background-color: var(--bg-sec);
        border: none;
    }
    
    .card-title {
        color: var(--head-text);
    }
    
    .card-text {
        color: var(--text);
    }

    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;400;900&display=swap');
     :root {
        --primary: #6610F2;
        --text: #808080;
        --head-text: #A36AFF;
        --bg-color: white;
        --im-text: #6c757d;
        --bg-sec: #f0f0f0;
    }
    
    .dark-theme {
        --text: #6c757d;
        --primary: #A36AFF;
        --bg-color: #121212;
        --bg-sec: #1c1c1c;
    }
    
    .text-holder .bx {
        font-size: 20px;
    }
    
    .bx.bxs-sun {
        color: white;
    }
    
    * {
        margin: 0;
        padding: 0;
        text-decoration: none;
        list-style: none;
    }
    
    body {
        font-family: 'Poppins', sans-serif;
        background-color: black;
    }
    
    .navbar-m {
        height: 80px;
        background-color: var(--bg-color);
        width: inherit;
    }
    
    .logo {
        font-size: 35px;
        font-weight: bold;
        padding-left: 100px;
        line-height: 80px;
        color: var(--primary);
    }
    
    .navbar-m .text-holder {
        float: right;
        margin-right: 100px;
        margin-bottom: 0;
    }
    
    .navbar-m .text-holder li {
        display: inline-block;
        margin: 0 8px;
        line-height: 80px;
        text-transform: capitalize;
        margin-left: 30px;
    }
    
    .text-holder li a {
        font-size: 18px;
        text-decoration: none;
        color: var(--text);
        padding-bottom: 10px;
    }
    
    .text-holder li a:hover {
        border-bottom: 2px solid var(--primary);
        color: var(--primary);
    }
    
    .text-holder li .getsign {
        color: var(--primary);
        border: 2px solid var(--primary);
        /* border-radius: 20px; */
        padding: 5px 10px;
        transition: ease-in-out 0.5s;
        box-shadow: none;
    }
    
    .text-holder li .getsign:hover {
        transition: ease-in-out 0.5s;
        box-shadow: 0px 50px var(--primary) inset;
        color: white;
    }
    
    .navbar-m #icon-menu {
        font-size: 30px;
        float: right;
        color: var(--primary);
        cursor: pointer;
        margin-right: 40px;
        line-height: 80px;
        display: none;
    }
    /* navbar ends */
    /* footer starts */
    
    .footer-m {
        position: relative;
        width: 100vw;
        height: auto;
        bottom: 0;
        display: flex;
        background-color: var(--bg-color);
    }
    
    .footer-m .box-one .logo {
        padding: 0;
    }
    
    .footer-m .box-one {
        display: block;
        margin-left: 100px;
    }
    
    .box-one p {
        text-align: left;
        width: 200px;
        font-size: 18px;
        font-weight: 400;
        color: var(--text);
    }
    
    .box-one ul {
        padding: 0;
    }
    
    .social-box li {
        display: inline-block;
    }
    
    .social-box li a {
        color: var(--text);
        font-size: 40px;
        margin-right: 10px;
    }
    
    .social-box li a:hover {
        color: var(--primary);
    }
    
    .box-one .web-design {
        color: var(--bg-color);
    }
    
    .menu-footer {
        bottom: 0;
        position: absolute;
    }
    
    .menu-footer li {
        display: inline-block;
        margin-left: 100px;
    }
    
    .menu-footer li a {
        text-decoration: none;
        color: var(--text);
    }
    
    .menu-footer li a:hover {
        color: var(--primary);
    }
    
    .box-two {
        height: auto;
        width: auto;
        position: relative;
        padding: 10px;
        margin-left: 70px;
        color: var(--text);
    }
    
    .box-two form {
        border: 1px solid var(--text);
        padding: 10px;
    }
    
    .box-two form :nth-child(1) {
        border: none;
        border-radius: 20px;
        padding: 10px;
    }
    
    .box-three {
        position: relative;
        padding: 10px;
        color: var(--text);
    }
    
    footer {
        display: flex;
    }
    
    .col-lg {
        left: 0;
        margin-left: 20px;
    }
    
    .holder-two {
        height: 500px;
        width: 100%;
        overflow: hidden;
        background-color: var(--bg-color);
        /* border-bottom: 2px solid var(--text); */
        /* background-repeat: no-repeat;
        background-size: cover;
        display: grid;
        background-image: url(<%= asset_path 'bookboy.jpg' %>); */
    }
    
    .holder-two .container {
        display: flex;
        flex-direction: row;
        height: inherit;
    }
    
    .text-body-2 {
        width: 100%;
        position: relative;
    }
    
    .text-header {
        font-size: 32px;
        color: var(--text);
        width: 600px;
        overflow: hidden;
        position: relative;
    }
    
    .bookboy {
        width: 400px;
    }

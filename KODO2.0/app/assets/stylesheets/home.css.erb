/* section three  */

.sec-three {
    display: block;
    height: 110vh;


}

.sec-three .sec-three-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 50px;
}

.sec-three-text .small-text {
    font-size: 1.5rem;
    width: 80%;
    text-align: center;
    color: var(--b-s-text);
}

.sec-courses {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;

}

.card-m {
    background-color: var(--bg-s);
    width: 22rem;
    min-width: 18rem;
    min-height: 25rem;
    max-height: 25rem;
    display: block;
    justify-content: center;
    border: 1px solid var(--tertiary);
    margin: 10px;
}

.card-m .card-title {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 10%;
    /* background-color: var(--tertiary); */
}

.card-m .card-img {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60%;
}

.course-logo {
    min-width: 12rem;
    max-width: 14rem;
}

.card-m .card-body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 30%;
}
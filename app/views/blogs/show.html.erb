
<div class="container">
  <div class="image-holder-show">

    
    <%= image_tag @blog.blogImage ,class:"card_image"if @blog.blogImage.attached?%>
  </div>
  <h1 class="blog-head">
    
    <%= @blog.title %>
  </h1>
  
  <div class="content-blog-show">
   
    <%= @blog.content %>
  </div>
</div>

<% if current_user.id = @blog.user_id %>
  
<div class="btn-wrapper">

  <%= link_to 'Edit', edit_blog_path(@blog),class: "btn btn-outline-dark" %> 
  <%= link_to 'Back', blogs_path , class: "btn btn-outline-danger"%>
</div>

<% else %>

<%= link_to 'Back', blogs_path ,class: "btn btn-outline-light"%>
<% end %>
